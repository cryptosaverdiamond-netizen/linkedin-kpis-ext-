{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "company_id", "team_id", "user_id", "post_id"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["post"]
    },
    "company_id": {
      "type": "string",
      "minLength": 1
    },
    "team_id": {
      "type": "string",
      "minLength": 1
    },
    "user_id": {
      "type": "string", 
      "minLength": 1
    },
    "post_id": {
      "type": "string",
      "pattern": "^urn:li:activity:\\d+$"
    },
    "created_at_iso": {
      "type": "string",
      "format": "date-time"
    },
    "impressions": {
      "type": "number",
      "minimum": 0
    },
    "reactions": {
      "type": "number",
      "minimum": 0
    },
    "comments": {
      "type": "number",
      "minimum": 0
    },
    "shares": {
      "type": "number", 
      "minimum": 0
    },
    "reshares": {
      "type": "number",
      "minimum": 0
    },
    "engagement_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "lang": {
      "type": "string",
      "enum": ["fr", "en", "other"]
    },
    "is_repost": {
      "type": "boolean"
    },
    "captured_at_iso": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  },
  "additionalProperties": false
}